<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:background="@color/white"
    android:foreground="?android:attr/selectableItemBackground">

    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">
        <ImageView
            android:id="@+id/foto_image"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="16dp"
            app:srcCompat="@mipmap/ic_launcher_round"
            android:layout_marginRight="16dp"
            android:layout_alignParentLeft="true" />

        <TextView
            android:textColor="@color/black"
            android:id="@+id/nombre_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/foto_image"
            android:textSize="18sp"
            android:textStyle="bold"
            android:onClick="a"
            android:text="Nombre del proveedor"
            android:layout_toRightOf="@+id/foto_image" />

        <TextView
            android:id="@+id/precio_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/foto_image"
            android:layout_below="@+id/nombre_text"
            android:layout_marginBottom="8dp"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:text="Realizo una nueva publicacion"
            android:layout_toRightOf="@+id/foto_image" />




    </RelativeLayout>
</androidx.cardview.widget.CardView>
